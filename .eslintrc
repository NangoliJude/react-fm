{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "classes": true,
        "jsx": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "react/jsx-indent-props": [2, 4],

        "no-var": 0,
        "vars-on-top": 0,
        "comma-dangle": 0,
        "no-use-before-define": 0,
        "indent": [2, 4, {"SwitchCase": 1}]
    },
    "plugins": [
        "react"
    ]
}
